{
  "compilerOptions": {
    "rootDir": ".",
    "noEmit": true,
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "esModuleInterop": true,

    /* Linting */
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "**/vite.*.ts",
    "**/vitest.*.ts",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
